<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ghtest.FirstPageActivity"
    tools:showIn="@layout/activity_first_page">

    <TextView
        android:id="@+id/texWtView"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical|end"
        android:text="@string/first_page_content"
        android:textSize="30sp"
        app:layout_anchorGravity="center_vertical|left" />

    <Button
        android:id="@+id/button1"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texWtView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="31dp"
        android:text="@string/first_page_button" />
</RelativeLayout>